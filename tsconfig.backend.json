{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist/backend",
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "noEmit": true
    },
    "include": [
        "src/backend/**/*.ts",
        "src/shared/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
