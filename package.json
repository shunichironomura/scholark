    "dev:frontend": "vite",
    "start": "bun run dist/backend/server.js",
    "lint": "eslint .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/backend/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
